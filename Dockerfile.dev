FROM ruby:3.2.2

# 環境変数の設定
ENV LANG C.UTF-8
ENV TZ Asia/Tokyo

# 必要なシステムライブラリをインストール
RUN apt-get update -qq && apt-get install -y \
  ca-certificates curl gnupg vim nano \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/*

# 作業ディレクトリを設定
WORKDIR /app

# Gemfileを先にコピーしてbundle install
COPY Gemfile* ./
RUN gem install bundler && bundle install

# プロジェクトファイルをコピー
COPY . .

# ポートを公開
EXPOSE 4567

# Sinatraアプリケーションを起動
CMD ["ruby", "app.rb", "-o", "0.0.0.0"]